<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.0//EN" "http://www.sosy-lab.org/benchexec/benchmark-1.0.dtd">
<benchmark tool="cpachecker" timelimit="45 s" hardtimelimit="60 s" memlimit="4 GB" cpuCores="1">

  <option name="-noout"/>
  <option name="-heap">1024M</option>
  <option name="-stack">32M</option>
  <option name="-config">config/legion.properties</option>

  <rundefinition name="legion">
    <option name="-benchmark"/>
  </rundefinition>

  <tasks name="ReachSafety-Bitvector">
    <includesfile>../programs/benchmarks/ReachSafety-BitVectors.set</includesfile>
    <propertyfile>../programs/benchmarks/properties/unreach-call.prp</propertyfile>
  </tasks>

</benchmark>
